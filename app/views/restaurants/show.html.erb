
<div class='row'>
  <div class='col-sm-12'>
    <h1><%= @restaurant.name %></h1>
  </div>
  <div class='col-sm-12'>
    <p><%= @restaurant.postcode %>, <%= @restaurant.address %>, <%= @restaurant.tube %></p>
  </div>
  <div class='col-sm-12'>
    <p> <%= @restaurant.description %></p>
  </div>

  <div class='col-sm-12'>
    <div id='map'>
      This will be the map
    </div>
  </div>

  <div class='col-sm-12'>
    <% if user_signed_in? && !current_user.reviewed?(@restaurant) %>
    <%= link_to 'Add review', new_restaurant_review_path(@restaurant) %>
    <% end %>
  </div>
</div>

<% @restaurant.reviews.each do |review| %>
  <div class='row'>
    <div class='col-sm-12 alert <%= review_color(review) %>'>
      <h4>Reviewer: <%= review.user.email %>
      <p> <%= review.body %> <br />
        Rating: <%= star_rating review %></p>
    </div>
    <div class='col-sm-12'>
      <%= link_to 'Edit', edit_restaurant_review_path(@restaurant, review) %>
      <%= link_to 'Delete', restaurant_review_path(@restaurant, review), method: :delete %>
    </div>
  </div>
<% end %>